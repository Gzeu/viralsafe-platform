# NEXT_PUBLIC_API_BASE_URL=https://viralsafe-api.onrender.com
# NEXT_PUBLIC_WS_URL=wss://viralsafe-api.onrender.com/ws

# Web3 Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id
NEXT_PUBLIC_ALCHEMY_API_KEY=your-alchemy-api-key
NEXT_PUBLIC_INFURA_PROJECT_ID=your-infura-project-id

# Blockchain Networks
NEXT_PUBLIC_CHAIN_ID=97  # BSC Testnet
NEXT_PUBLIC_CHAIN_NAME=BSC Testnet
NEXT_PUBLIC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
NEXT_PUBLIC_BLOCK_EXPLORER=https://testnet.bscscan.com

# Smart Contracts (will be updated after deployment)
NEXT_PUBLIC_SAFE_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_VIRAL_NFT_ADDRESS=0x...
NEXT_PUBLIC_STAKING_ADDRESS=0x...
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x...

# IPFS Configuration
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs/
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Social Media Integration
NEXT_PUBLIC_TIKTOK_APP_ID=your-tiktok-app-id
NEXT_PUBLIC_TWITTER_API_KEY=your-twitter-api-key

# Feature Flags
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_ENABLE_STORYBOOK=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true

# App Configuration
NEXT_PUBLIC_APP_NAME=ViralSafe
NEXT_PUBLIC_APP_DESCRIPTION=Transformă viralitatea în active digitale prin Web3 și NFT
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DOMAIN=localhost:3000

# Production Settings (uncomment for production)
# NEXT_PUBLIC_APP_URL=https://viralsafe.io
# NEXT_PUBLIC_APP_DOMAIN=viralsafe.io
# NEXT_PUBLIC_ENABLE_DEV_TOOLS=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=true

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
NEXT_PUBLIC_SUPPORTED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime

# Rate Limiting (client-side)
NEXT_PUBLIC_API_RATE_LIMIT=60
NEXT_PUBLIC_UPLOAD_RATE_LIMIT=5

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=ro
NEXT_PUBLIC_SUPPORTED_LOCALES=ro,en,es,fr

# SEO & Meta
NEXT_PUBLIC_SITE_NAME=ViralSafe Platform
NEXT_PUBLIC_SITE_DESCRIPTION=Platformă Web3 inovatoare care combină elementele sociale cu monetizarea blockchain
NEXT_PUBLIC_SITE_KEYWORDS=web3,nft,blockchain,viral,social,tiktok,creator-economy
NEXT_PUBLIC_SITE_AUTHOR=George Pricop
NEXT_PUBLIC_SITE_TWITTER=@ViralSafePlatform

# Development Tools
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_GRID_OVERLAY=false

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Security
NEXT_PUBLIC_CSP_NONCE=auto
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true