# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/viralsafe?retryWrites=true&w=majority
DATABASE_NAME=viralsafe

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379

# JWT Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://*.vercel.app,https://viralsafe.io

# External Services
PINATA_JWT_TOKEN=your-pinata-jwt-token
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# Blockchain Configuration
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
BSC_MAINNET_RPC_URL=https://bsc-dataseed.binance.org/
ALCHEMY_API_KEY=your-alchemy-api-key
INFURA_PROJECT_ID=your-infura-project-id

# Social Media APIs
TIKTOK_API_KEY=your-tiktok-api-key
TIKTOK_API_SECRET=your-tiktok-api-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@viralsafe.io

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=false

# Render Specific (uncomment for production)
# PORT=10000
# PYTHON_VERSION=3.11.5